<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_chocolatemalt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chocolate malt"
        app:layout_constraintBottom_toTopOf="@id/button_vanillabean"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_vanillabean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vanilla bean"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_chocolatemalt" />

</androidx.constraintlayout.widget.ConstraintLayout>